<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/img_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/history_btn" />

    <TextView
        android:id="@+id/house_notehistory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_note_title"
        android:layout_toRightOf="@id/img_note_title"
        android:layout_margin="10dip"
        android:layout_marginLeft="25dip"
        android:paddingTop="10dip"
        android:text="出入"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/house_notehistory_ownername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/house_notehistory_name"
        android:layout_marginLeft="20dip"
        android:paddingTop="10dip"
        android:layout_toRightOf="@id/house_notehistory_name"
        android:text="小张"
        android:textSize="17sp"
         android:textColor="#000" />
    <TextView
        android:id="@+id/house_notehistory_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/house_notehistory_ownername"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/house_notehistory_ownername"
        android:text="2015/5/1 12:00"
        android:textSize="17sp" 
        android:textColor="#000"/>

</RelativeLayout>